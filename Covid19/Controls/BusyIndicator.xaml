<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="Covid19.Controls.BusyIndicator"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <ActivityIndicator IsRunning="True" Color="{DynamicResource ForegroundLow}" />
        <Label
            HorizontalTextAlignment="Center"
            Text="Please wait while we gather and crunch essential data for you."
            TextColor="{DynamicResource ForegroundLow}"
            VerticalTextAlignment="Center" />
    </StackLayout>
</ContentView>